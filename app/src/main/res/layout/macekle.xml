<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    tools:context=".MACEKLE"

    android:background="@drawable/bowling_green_seed"

    android:layout_height="match_parent"

    >


    <Spinner
        android:id="@+id/spinner1"
        android:layout_width="fill_parent"

        android:layout_centerHorizontal="true"





        android:layout_marginTop="100dp"

        android:layout_height="40dp" />

    <Spinner
        android:id="@+id/spinner2"

        android:layout_width="fill_parent"


        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"

        android:layout_height="40dp" />

    <EditText
        android:id="@+id/editText5"
        android:layout_width="fill_parent"
        android:layout_centerHorizontal="true"

        android:layout_marginTop="200dp"

        android:importantForAutofill="no"
        android:textSize="19sp"
        android:textColorHint="#000000"
        android:textStyle="bold"
        android:layout_height="40dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="@string/telno" />

    <EditText
        android:id="@+id/editText6"
        android:layout_centerHorizontal="true"
        android:layout_width="fill_parent"
        android:importantForAutofill="no"
        android:textColorHint="#000000"
        android:layout_marginTop="250dp"

        android:textSize="19sp"

        android:textStyle="bold"
        android:layout_height="40dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="@string/saatgiriniz" />

    <EditText
        android:id="@+id/editText7"
        android:layout_width="fill_parent"
        android:layout_height="40dp"


        android:layout_marginTop="300dp"
        android:layout_centerHorizontal="true"

        android:ems="10"
        android:hint="@string/tarihgiriniz"
        android:importantForAutofill="no"
        android:inputType="textPersonName"
        android:textColorHint="#000000"
        android:textSize="19sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editText8"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"

        android:layout_marginTop="350dp"

        android:ems="10"
        android:hint="@string/eksikgiriniz"
        android:importantForAutofill="no"
        android:inputType="textPersonName"
        android:textColorHint="#000000"
        android:textSize="19sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button"
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:background="@drawable/search_layout2"
        android:textColor="#ffffff"
        android:layout_centerHorizontal="true"

        android:onClick="btnAddData"

        android:layout_marginTop="440dp"

        android:text="@string/kaydet" />

    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adVieww"
        android:layout_width="300dp"

        android:layout_height="50dp"


        android:layout_centerHorizontal="true"

        android:layout_alignParentBottom="true"

        app:adSize="BANNER"
        app:adUnitId="ca-app-pub-3058256649555601/1899508755"
       ></com.google.android.gms.ads.AdView>

</RelativeLayout>